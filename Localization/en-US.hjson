Mods: {
	ErkySSC: {
		Configs: {
			ServerConfig: {
				DisplayName: Server Config

				StartItems: {
					Label: Starting Items
					Tooltip: The items you start with when a new character joins. Default to copper tools.
				}

				StartLife: {
					Label: "[i:LifeCrystal] Starting Health"
					Tooltip: The starting max health of a new character. Default to 100
				}

				StartMana: {
					Label: "[i:ManaCrystal] Starting Mana"
					Tooltip: The starting max mana of a new character. Default to 20
				}

				Headers: {
					Options: Options
					StartOptions: Start Options
					ClientSidedMods: Client Sided Mods
					BannedItems: Banned Items
					Debug: Debug
				}

				IsSSCEnabled: {
					Label: Is SSC Enabled
					Tooltip: Toggle the entire feature. Recommend to keep this on.
				}

				AllowClientMods: {
					Label: Allow Client Mods
					Tooltip: Whether to allow joining players to use client-sided mods.
				}

				AllowedClientMods: {
					Label: Allowed Client Mods
					Tooltip: Enter which mods are allowed. Entry the mod's internal name, findable from the Mods folder.
				}

				BannedItems: {
					Label: Banned Items
					Tooltip: Makes items be unusable and unpickable for players in the world
				}

				ShowDebugMessages: {
					Label: "[i:Goggles] Show Debug Messages"
					Tooltip: Shows debug messages in the chat. Useful for developers, investigating bugs, etc.
				}

				StartDifficulty: {
					Label: Starting Difficulty
					Tooltip: The difficulty of the players who join
				}

				PlayerStartName: {
					Label: Starting Player Names
					Tooltip: ""
				}
			}

			ClientConfig: {
				DisplayName: Client Config

				ShowWhoSummonedBossMessage: {
					Label: "[i:SlimeCrown] Boss Summon"
					Tooltip: Shows when anyone uses a boss summon item
				}

				Headers: {
					ClientOptions: Client Options
					Debug: "[i:Goggles] Debug"
					ChatMessages: "[i:ErkySSC/ChatConfigItem] Chat Messages"
				}

				ShowStatsMessageWhenEnteringWorld: {
					Label: Welcome Message
					Tooltip: Shows player information when entering the world
				}

				ShowPlayerSaveMessage: {
					Label: Save Messages
					Tooltip: Shows when the server saves your character
				}

				ShowDebugMessages: {
					Label: Debug Messages
					Tooltip:
						'''
						Shows debug messages in chat with a timestamp and calling class. 
						Recommended for developers and testers.
						'''
				}
			}

			PlayerDifficultyMode: {
				Tooltip: ""

				Softcore: {
					Label: Softcore
					Tooltip: ""
				}

				Mediumcore: {
					Label: Mediumcore
					Tooltip: ""
				}

				Hardcore: {
					Label: Hardcore
					Tooltip: ""
				}

				Journey: {
					Label: Journey
					Tooltip: ""
				}
			}

			PlayerNameMode: {
				Tooltip: ""

				Default: {
					Label: Default
					Tooltip: ""
				}

				Steam: {
					Label: Steam
					Tooltip: ""
				}

				Discord: {
					Label: Discord
					Tooltip: ""
				}

				Numbered: {
					Label: Numbered
					Tooltip: ""
				}

				Random: {
					Label: Random
					Tooltip: ""
				}
			}
		}

		Commands: {
			SSCHelp: {
				Description: Shows useful information for using SSC.
				NoActivePlayer: No active player data.
				Header: Server-Side Characters (SSC)
				Bullet_ServerSaved: Your character is saved on the server, not on your PC.
				Bullet_SharedWorld: Your character's items, progress, and stats are shared on this world.
				Bullet_Persistence: Logging out or switching PCs will not reset your character.
				Bullet_Playtime: � Playtime on this world: {0}
				Bullet_ServerPath: � Server files are stored on server's machine, under tModLoader/ErkySSC/<WorldName>/<YourSteamID>/<YourPlayer>.plr
			}

			SSCSave: {
				Description: Manually saves your SSC.
				NotEnabled: SSC is not enabled on this server.
				MultiplayerOnly: This command can only be used in multiplayer.
				Success: "[ErkySSC]: {0} has been saved to the server."
			}

			SSCStats: {
				Description: Shows your SSC stats for this world.
				NoActivePlayer: No active player data.
				Header: Character Stats — {0} | Playtime: {1}
				Difficulty: • Difficulty: {0}
				MaxStats: • Health: {0} | Mana: {1}
				Inventory: • Inventory: {0} | Accessories: {1}
				Deaths: • PvE Deaths: {0} | PvP Deaths: {1}
			}
		}

		Items: {
			ChatConfigItem: {
				DisplayName: Chat Config Item
				Tooltip: ""
			}
		}
	}
}
